---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const pathSegments = pathname.split('/').filter(Boolean);
const isBlogPost = pathSegments[0] === 'blog' && pathSegments.length > 1;
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<span class="nav-blog">
				<HeaderLink href="/blog">Blog</HeaderLink>
				{isBlogPost && <span class="nav-sub" aria-hidden="true">└─ Post</span>}
			</span>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
			<HeaderLink href="/privacy">Privacy</HeaderLink>
		</div>
		<div class="header-right">
			<button
				type="button"
				class="theme-toggle"
				aria-label="Toggle dark mode"
				title="Toggle dark mode"
			>
				<span class="theme-icon sun" aria-hidden="true">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
				</span>
				<span class="theme-icon moon" aria-hidden="true">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
				</span>
			</button>
			<div class="social-links">
				<a href="https://github.com/isBatota" target="_blank" rel="noopener noreferrer">
					<span class="sr-only">GitHub profile</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
						<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
					</svg>
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: var(--header-shadow);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.25em;
	}
	.nav-blog {
		display: inline-flex;
		align-items: baseline;
		gap: 0.25em;
	}
	.nav-sub {
		font-size: 0.9em;
		color: rgb(var(--gray));
		white-space: nowrap;
	}
	.header-right {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	.theme-toggle {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5em;
		background: transparent;
		border: none;
		border-radius: 8px;
		cursor: pointer;
		color: rgb(var(--black));
	}
	.theme-toggle:hover {
		background: rgba(var(--gray), 0.15);
	}
	.theme-icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}
	.theme-icon.sun {
		display: none;
	}
	.theme-icon.moon {
		display: inline-flex;
	}
	:global([data-theme="dark"]) .theme-icon.sun {
		display: inline-flex;
	}
	:global([data-theme="dark"]) .theme-icon.moon {
		display: none;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
<script>
	function initTheme() {
		const toggle = document.querySelector('.theme-toggle');
		if (!toggle) return;
		toggle.addEventListener('click', () => {
			const html = document.documentElement;
			const isDark = html.getAttribute('data-theme') === 'dark';
			html.setAttribute('data-theme', isDark ? 'light' : 'dark');
			localStorage.setItem('theme', isDark ? 'light' : 'dark');
		});
	}
	initTheme();
</script>
